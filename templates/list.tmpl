## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>

<%block name="content">
<article class="listpage">
    <header>
        <h1>${title|h}</h1>
    </header>
    %if items:

    <ul class="menu vertical">
    % for text, link, count in items:
        <li><a href="${link}">${text|h}</a>
        % if count:
            &nbsp;<small>(${count})</small>
        % endif
    % endfor
    </ul>
    %else:
    <p>${messages("Nothing found.")}</p>
    %endif
</article>
</%block>
